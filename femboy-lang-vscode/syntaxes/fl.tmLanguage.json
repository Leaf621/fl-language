{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Femboy Language",
  "scopeName": "source.fl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fl",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fl",
              "match": "\\\\[ntr\\\\\"0]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.fl",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.fl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fl",
          "match": "\\b(if|else|stay|go|by|return)\\b"
        },
        {
          "name": "keyword.declaration.fl",
          "match": "\\b(keep|share)\\b"
        },
        {
          "name": "keyword.other.import.fl",
          "match": "\\b(adopt)\\b"
        },
        {
          "name": "keyword.other.class.fl",
          "match": "\\b(boy)\\b"
        },
        {
          "name": "keyword.operator.new.fl",
          "match": "\\b(makeout)\\b"
        },
        {
          "name": "keyword.other.native.fl",
          "match": "\\b(native)\\b"
        },
        {
          "name": "keyword.operator.range.fl",
          "match": "\\b(to)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.fl",
          "match": "\\bYES\\b"
        },
        {
          "name": "constant.language.boolean.false.fl",
          "match": "\\bNO\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.fl",
          "match": "=>"
        },
        {
          "name": "keyword.operator.namespace.fl",
          "match": "::"
        },
        {
          "name": "keyword.operator.comparison.fl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.fl",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.fl",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arithmetic.fl",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.spread.fl",
          "match": "\\.\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.fl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.fl" }
          }
        },
        {
          "match": "\\b(self)\\b",
          "name": "variable.language.self.fl"
        },
        {
          "match": "\\b(daddy)\\b",
          "name": "variable.language.super.fl"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b(keep)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)",
          "captures": {
            "1": { "name": "keyword.declaration.fl" },
            "2": { "name": "variable.other.fl" }
          }
        },
        {
          "match": "\\b(keep)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?==)",
          "captures": {
            "1": { "name": "keyword.declaration.fl" },
            "2": { "name": "variable.other.fl" }
          }
        }
      ]
    }
  }
}
